<section class="row product-list">

{{#each products as |product|}}
    {{#link-to 'products.show' product.slug class='text-center col-sm-4 col-md-4 col-lg-3'}}
        <img src="{{product.imgSrc}}" alt="{{product.name}}" class="img-responsive img-rounded" />
        <div class="caption">
            <h3>{{product.name}}</h3>
        </div>
    {{/link-to}}
{{/each}}

</section>